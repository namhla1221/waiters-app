<h1>Sinovuyo's Coffee Shop</h1>

<div class="ui middle aligned center aligned grid">
  <div class ="bomza">
  <div class="column">
    <h2 class="ui teal image header">
      {{!--
      <img src="" alt="" class="image"> --}}
      {{#if messages.access}}
      <div class="ui  message loginError orange"> 
        <h3>{{messages.access}}</h3>
      </div>
      {{/if}}
      <div class="content">
        <h3>
        Log-in to your account
        </h3>
      </div>
    </h2>
    <form class="ui large form" method="POST" action="/sigin">
      <div class="ui stacked segment">
        <div class="field">
          <select name='job_Type' class="ui dropdown">
            <option value="">Job position</option>
            <option name='job_Type' value="waiter">Waiter</option>
          </select>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="siginUsername" placeholder="Username">
            <a href="/days">Admin</a>
          </div>
        </div>
        <button class="ui fluid large teal submit button" type="submit">Login</button>
      </div>
     
      {{#if messages.error}}
      <div class="ui  message loginError orange"> 
        <h3>{{messages.error}}</h3>
      </div>
      {{/if}}
    </form>

    <div class="ui message">
      New to us?
      <a href="/signup">Sign Up</a>
    </div>
  </div>
  </div>
</div>


<script src="../control.js"></script>