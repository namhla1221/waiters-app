<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      {{!--
      <img src="" alt="" class="image"> --}}
      <div class="content">
        Sign-up to
      </div>
    </h2>
    <form class="ui large form" method="POST" action="/signup">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="full_name" placeholder="fullname">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="username">
          </div>
        </div>
    
      <div class="field">
      <select name='job_Type' class="ui dropdown">
        <option value="">Job position</option>
        <option name='job_Type' value="admin">Admin</option>
        <option name='job_Type' value="waiter">Waiter</option>
      </select>
       </div>

      <button class="ui fluid large teal submit button" type="submit">Sign-up</button>
  </div>
  {{#if messages.error}}
  <div class="ui  message signupErr orange">
    <h3>{{messages.error}}</h3>
  </div>
  {{/if}}

   {{#if messages.info}}
  <div class="ui  message signupErr green">
    <h3>{{messages.info}}</h3>
  </div>
  {{/if}}
  </form>
</div>
</div>

<script src="../control.js"></script>